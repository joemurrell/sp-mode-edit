{
  "manifest_version": 3,
  "name": "Auto Append ?Mode=Edit + Show Nav",
  "version": "1.1",
  "description": "Appends ?Mode=Edit and simulates Edit click to show SharePoint nav hub",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Edit Mode + Show Nav"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
